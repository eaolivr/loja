                                            <p>Enviamos os detalhes para seu e-mail: cliente@email.com</p>
                                            <div class="order-summary">
                                                <h3>Resumo do Pedido</h3>
                                                <div class="summary-item">
                                                    <span>Itens:</span>
                                                    <span>R$ 189,80</span>
                                                </div>
                                                <div class="summary-item">
                                                    <span>Frete:</span>
                                                    <span>Grátis</span>
                                                </div>
                                                <div class="summary-item total">
                                                    <span>Total:</span>
                                                    <span>R$ 189,80</span>
                                                </div>
                                            </div>
                                            <a href="/" class="btn">Continuar Comprando</a>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="order-summary-sidebar">
                                    <h3>Resumo do Pedido</h3>
                                    <div class="order-items">
                                        <!-- Itens do pedido -->
                                    </div>
                                    <div class="order-totals">
                                        <div class="summary-row">
                                            <span>Subtotal</span>
                                            <span>R$ 189,80</span>
                                        </div>
                                        <div class="summary-row">
                                            <span>Frete</span>
                                            <span>Grátis</span>
                                        </div>
                                        <div class="summary-row total">
                                            <span>Total</span>
                                            <span>R$ 189,80</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `,
                init: function() {
                    initCheckoutPage();
                }
            }
        };

        // Roteador simples
        function router() {
            const path = window.location.pathname;
            const route = routes[path] || routes['/'];
            
            document.title = route.title;
            document.getElementById('main-content').innerHTML = route.template;
            
            if (route.init) {
                route.init();
            }
            
            updateCartCount();
        }

        // Atualizar contador do carrinho
        function updateCartCount() {
            const count = cart.reduce((total, item) => total + item.quantity, 0);
            document.querySelector('.cart-count').textContent = count;
        }

        // Adicionar ao carrinho
        function addToCart(productId, productName, price, image, color, size, quantity = 1) {
            const existingItem = cart.find(item => 
                item.id === productId && 
                item.color === color && 
                item.size === size
            );
            
            if (existingItem) {
                existingItem.quantity += quantity;
            } else {
                cart.push({
                    id: productId,
                    name: productName,
                    price: price,
                    image: image,
                    color: color,
                    size: size,
                    quantity: quantity
                });
            }
            
            localStorage.setItem('cart', JSON.stringify(cart));
            updateCartCount();
            showAddedToCartModal(productName);
        }

        // Modal de produto adicionado
        function showAddedToCartModal(productName) {
            const modal = document.createElement('div');
            modal.className = 'added-to-cart-modal';
            modal.innerHTML = `
                <div class="modal-content">
                    <i class="fas fa-check-circle"></i>
                    <p>${productName} foi adicionado ao seu carrinho!</p>
                    <div class="modal-buttons">
                        <button class="continue-shopping">Continuar Comprando</button>
                        <a href="/carrinho" class="view-cart">Ver Carrinho</a>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            modal.querySelector('.continue-shopping').addEventListener('click', () => {
                document.body.removeChild(modal);
            });
            
            setTimeout(() => {
                if (document.body.contains(modal)) {
                    document.body.removeChild(modal);
                }
            }, 3000);
        }

        // Funções de inicialização de página
        function initHomePage() {
            // Slider de banners
            const banners = document.querySelectorAll('.banner');
            let currentBanner = 0;
            
            if (banners.length > 0) {
                banners[0].classList.add('active');
                
                setInterval(() => {
                    banners[currentBanner].classList.remove('active');
                    currentBanner = (currentBanner + 1) % banners.length;
                    banners[currentBanner].classList.add('active');
                }, 5000);
            }
            
            // Event listeners para botões "Adicionar ao Carrinho"
            const addToCartButtons = document.querySelectorAll('.add-to-cart');
            addToCartButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    const productCard = e.target.closest('.product-card');
                    const productId = productCard.dataset.id || 'prod-' + Math.floor(Math.random() * 1000);
                    const productName = productCard.querySelector('.product-title').textContent;
                    const price = parseFloat(productCard.querySelector('.current-price').textContent.replace('R$ ', '').replace(',', '.'));
                    const image = productCard.querySelector('.product-image img').src;
                    
                    // Simulando seleção de cor e tamanho
                    const color = 'Preto'; // Cor padrão
                    const size = 'M'; // Tamanho padrão
                    
                    addToCart(productId, productName, price, image, color, size);
                });
            });
        }

        function initProductDetailPage() {
            // Trocar imagem principal ao clicar nas miniaturas
            const thumbnails = document.querySelectorAll('.thumbnail-images img');
            const mainImage = document.getElementById('mainImage');
            
            thumbnails.forEach(thumb => {
                thumb.addEventListener('click', () => {
                    mainImage.src = thumb.src;
                });
            });
            
            // Seleção de cor
            const colorOptions = document.querySelectorAll('.color-option');
            const selectedColorText = document.getElementById('selectedColor');
            
            colorOptions.forEach(option => {
                option.addEventListener('click', () => {
                    colorOptions.forEach(opt => opt.classList.remove('selected'));
                    option.classList.add('selected');
                    selectedColorText.textContent = option.dataset.color;
                });
            });
            
            // Seleção de tamanho
            const sizeOptions = document.querySelectorAll('.size-option');
            
            sizeOptions.forEach(option => {
                option.addEventListener('click', () => {
                    sizeOptions.forEach(opt => opt.classList.remove('selected'));
                    option.classList.add('selected');
                });
            });
            
            // Seletor de quantidade
            const minusBtn = document.querySelector('.quantity-minus');
            const plusBtn = document.querySelector('.quantity-plus');
            const quantityInput = document.querySelector('.quantity-input');
            
            minusBtn.addEventListener('click', () => {
                let value = parseInt(quantityInput.value);
                if (value > 1) {
                    quantityInput.value = value - 1;
                }
            });
            
            plusBtn.addEventListener('click', () => {
                let value = parseInt(quantityInput.value);
                quantityInput.value = value + 1;
            });
            
            // Adicionar ao carrinho
            const addToCartBtn = document.querySelector('.add-to-cart-btn');
            
            addToCartBtn.addEventListener('click', () => {
                const productName = document.querySelector('.product-info h1').textContent;
                const price = parseFloat(document.querySelector('.current-price').textContent.replace('R$ ', '').replace(',', '.'));
                const image = mainImage.src;
                const color = selectedColorText.textContent;
                const size = document.querySelector('.size-option.selected').textContent;
                const quantity = parseInt(quantityInput.value);
                
                addToCart('prod-001', productName, price, image, color, size, quantity);
            });
        }

        function initCartPage() {
            // Função para renderizar os itens do carrinho
            function renderCartItems() {
                const cartItemsContainer = document.querySelector('.cart-item-list');
                const subtotalElement = document.querySelector('.subtotal');
                const orderTotalElement = document.querySelector('.order-total');
                
                // Limpar carrinho
                cartItemsContainer.innerHTML = '';
                
                if (cart.length === 0) {
                    cartItemsContainer.innerHTML = '<div class="empty-cart">Seu carrinho está vazio</div>';
                    subtotalElement.textContent = 'R$ 0,00';
                    orderTotalElement.textContent = 'R$ 0,00';
                    document.querySelector('.checkout-btn').style.display = 'none';
                    return;
                }
                
                let subtotal = 0;
                
                cart.forEach((item, index) => {
                    const itemTotal = item.price * item.quantity;
                    subtotal += itemTotal;
                    
                    const cartItemElement = document.createElement('div');
                    cartItemElement.className = 'cart-item';
                    cartItemElement.innerHTML = `
                        <div class="item-product">
                            <img src="${item.image}" alt="${item.name}">
                            <div class="item-details">
                                <h4>${item.name}</h4>
                                <p>Cor: ${item.color}</p>
                                <p>Tamanho: ${item.size}</p>
                            </div>
                        </div>
                        <div class="item-price">R$ ${item.price.toFixed(2).replace('.', ',')}</div>
                        <div class="item-quantity">
                            <button class="quantity-minus" data-index="${index}">-</button>
                            <input type="number" value="${item.quantity}" min="1" class="quantity-input" data-index="${index}">
                            <button class="quantity-plus" data-index="${index}">+</button>
                        </div>
                        <div class="item-total">R$ ${itemTotal.toFixed(2).replace('.', ',')}</div>
                        <div class="item-remove">
                            <button class="remove-item" data-index="${index}"><i class="fas fa-times"></i></button>
                        </div>
                    `;
                    
                    cartItemsContainer.appendChild(cartItemElement);
                });
                
                // Atualizar totais
                subtotalElement.textContent = `R$ ${subtotal.toFixed(2).replace('.', ',')}`;
                orderTotalElement.textContent = `R$ ${subtotal.toFixed(2).replace('.', ',')}`;
                
                // Adicionar event listeners para os controles de quantidade
                document.querySelectorAll('.quantity-minus').forEach(button => {
                    button.addEventListener('click', (e) => {
                        const index = e.target.dataset.index;
                        if (cart[index].quantity > 1) {
                            cart[index].quantity--;
                            localStorage.setItem('cart', JSON.stringify(cart));
                            renderCartItems();
                            updateCartCount();
                        }
                    });
                });
                
                document.querySelectorAll('.quantity-plus').forEach(button => {
                    button.addEventListener('click', (e) => {
                        const index = e.target.dataset.index;
                        cart[index].quantity++;
                        localStorage.setItem('cart', JSON.stringify(cart));
                        renderCartItems();
                        updateCartCount();
                    });
                });
                
                document.querySelectorAll('.quantity-input').forEach(input => {
                    input.addEventListener('change', (e) => {
                        const index = e.target.dataset.index;
                        const newQuantity = parseInt(e.target.value);
                        
                        if (newQuantity >= 1) {
                            cart[index].quantity = newQuantity;
                            localStorage.setItem('cart', JSON.stringify(cart));
                            renderCartItems();
                            updateCartCount();
                        }
                    });
                });
                
                // Adicionar event listeners para remover itens
                document.querySelectorAll('.remove-item').forEach(button => {
                    button.addEventListener('click', (e) => {
                        const index = e.target.closest('button').dataset.index;
                        cart.splice(index, 1);
                        localStorage.setItem('cart', JSON.stringify(cart));
                        renderCartItems();
                        updateCartCount();
                    });
                });
            }

            renderCartItems();
        }

        function initCheckoutPage() {
            // Lógica para navegação entre passos do checkout
            const steps = document.querySelectorAll('.step');
            const forms = document.querySelectorAll('.checkout-form');
            
            document.querySelectorAll('.next-step').forEach(button => {
                button.addEventListener('click', (e) => {
                    const nextStep = e.target.dataset.next;
                    
                    // Validar formulário atual antes de avançar
                    let isValid = true;
                    const currentForm = document.querySelector('.checkout-form.active');
                    if (currentForm.id === 'address-form') {
                        // Validação básica do formulário de endereço
                        const requiredFields = currentForm.querySelectorAll('[required]');
                        requiredFields.forEach(field => {
                            if (!field.value) {
                                isValid = false;
                                field.style.borderColor = 'red';
                            } else {
                                field.style.borderColor = '';
                            }
                        });
                    }
                    
                    if (isValid) {
                        // Atualizar passos
                        steps.forEach(step => {
                            step.classList.remove('active');
                            if (step.dataset.step === nextStep) {
                                step.classList.add('active');
                            }
                        });
                        
                        // Atualizar formulários
                        forms.forEach(form => {
                            form.classList.remove('active');
                            if (form.id === (nextStep === '3' ? 'confirmation-step' : nextStep === '2' ? 'payment-form' : 'address-form')) {
                                form.classList.add('active');
                            }
                        });
                    }
                });
            });
            
            document.querySelectorAll('.prev-step').forEach(button => {
                button.addEventListener('click', (e) => {
                    const prevStep = e.target.dataset.prev;
                    
                    // Atualizar passos
                    steps.forEach(step => {
                        step.classList.remove('active');
                        if (step.dataset.step === prevStep) {
                            step.classList.add('active');
                        }
                    });
                    
                    // Atualizar formulários
                    forms.forEach(form => {
                        form.classList.remove('active');
                        if (form.id === (prevStep === '1' ? 'address-form' : 'payment-form')) {
                            form.classList.add('active');
                        }
                    });
                });
            });
            
            // Alternar entre métodos de pagamento
            document.querySelectorAll('input[name="payment"]').forEach(radio => {
                radio.addEventListener('change', (e) => {
                    document.querySelectorAll('.payment-details').forEach(details => {
                        details.style.display = 'none';
                    });
                    
                    const selectedDetails = e.target.closest('.payment-method').querySelector('.payment-details');
                    selectedDetails.style.display = 'block';
                });
            });
            
            // Mostrar detalhes do método de pagamento selecionado por padrão
            const selectedPayment = document.querySelector('input[name="payment"]:checked');
            if (selectedPayment) {
                selectedPayment.closest('.payment-method').querySelector('.payment-details').style.display = 'block';
            }
        }

        // Navegação via JavaScript
        document.addEventListener('click', (e) => {
            if (e.target.tagName === 'A' && e.target.getAttribute('href') && 
                e.target.getAttribute('href').startsWith('/') && 
                !e.target.getAttribute('href').startsWith('//')) {
                e.preventDefault();
                window.history.pushState({}, '', e.target.getAttribute('href'));
                router();
            }
        });

        // Inicializar roteador quando a página carrega e quando o histórico muda
        window.addEventListener('load', router);
        window.addEventListener('popstate', router);
    </script>
</body>
</html>
